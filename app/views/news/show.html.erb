<div class="container">

  <div class="news">
    <h1>
    <%= @new.title_ru if params[:locale] != true and params[:locale] != 'tm' and params[:locale] != 'ru'%>
    <%= @new.title_ru if params[:locale] == 'ru'%>
    <%= @new.title_tm if params[:locale] == 'tm'%>
    </h1>
    <div class="card" style="width: 30rem">
    <% if @new.image.attached? %>
      <%= image_tag(@new.image)%>
    <% else%>
      <%= image_tag(@no)%>
    <% end %>
    </div>
    <br>
    <hr>
    <div class="news-form">
      <%= simple_format @new.text_ru if params[:locale] != true and params[:locale] != 'tm' and params[:locale] != 'ru'%>
      <%= simple_format @new.text_ru if params[:locale] == 'ru'%>
      <%= simple_format @new.text_tm if params[:locale] == 'tm'%>
    </div>
    <div class="news-form">
      <p style="font-size: 9px;">
        <%= @new.created_at %>
      </p>
    </div>

  </div>
</div>
