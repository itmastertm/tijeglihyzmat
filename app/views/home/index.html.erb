<div class="footer2" id="footer2" style="background-color: rgba(0, 120, 201, 0.7);">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6">

        <div class="form-wrapper">
        <%= form_for @contact do |f| %>
        <div class="contact-form">

          <h2 class="contact-form__title"><%= t('contact.write') %></h2>
          <div class="contact-form__input-wrapper">

            <%= f.text_field :name, class:'contact-form__input contact-form__input_name', placeholder: t('contact.name')%>
          </div>
        <div class="contact-form__input-wrapper">
          <%= f.email_field :email, class:'contact-form__input contact-form__input_email', placeholder:'E-mail' %>
        </div>
        <div class="contact-form__input-wrapper">
          <%= f.text_field :phone, class:'contact-form__input contact-form__input_tel', placeholder: t('sales.phone')  %>
        </div>
        <div class="contact-form__input-wrapper">
        <%= f.text_area :message, class:'form-control', rows:'8' %>
        </div>
          <div class="contact-form__input-wrapper">
            <%= f.file_field :file, class:'form-control', type:'file', id:'formFileMultiple' %>
          </div>
        <center>
        <%= f.submit t('contact.send'), class:'btn btn-success'%>
        </center>
        <% end %>
        </div>

        </div>
      </div>
      <div class="col-12 col-md-6">
        <div class="form-wrapper" style="min-height: 729px">
          <div class="contact-form" style="min-height: 669px">
            <h2 class="contact-form__title"><%= t('contact.contacts') %></h2>
              <% @contactdetails.each do |c| %>

                <div class="">
                  <h4>
                  <%= t('contact.address')%>
                  <%= c.address_ru if params[:locale] != true and params[:locale] != 'tm' and params[:locale] != 'ru' %>
                  <%= c.address_ru if params[:locale] == 'ru' %>
                  <%= c.address_tm if params[:locale] == 'tm' %>
                  </h4>
                </div>
                <hr>
                <div class="">
                  <h4>
                  <%= t('contact.phone')%>
                  <a href="tel:<%= c.phone1 %>"><%= c.phone1 %></a>;
                  <a href="tel:<%= c.phone2 %>"><%= c.phone2 %></a>
                  </h4>
                </div>
                <hr>
                <div class="">
                  <h4>
                  <%= t('contact.mail')%>
                  <%= mail_to c.email1 %>;
                  <%= mail_to c.email2 %>
                  </h4>
                </div>
                <hr>
              <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
  <% flash.each do |type, msg| %>
  <div class="alert alert-danger">
    <center><%= msg %></center>
  </div>
  <% end %>
