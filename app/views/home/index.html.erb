<div class="novana_ulanekas_wrapper">

  <div class="novana_ulanekas">
    <center>
    <h1><%= t('news')%></h1>
    </center>
    <div class="novana_ulanekas__wrp swiper-wrapper">
      <!-- Карточка -->
      <% @news.each do |new| %>
        <div class="novana_ulanekas__item swiper-slide">
          <div class="novana_ulanekas__img">
            <% if new.image.attached? %>
            <%= image_tag(new.image) %>
            <% else %>
            <%= image_tag(@no)%>
            <% end %>
          </div>
            <div class="novana_ulanekas__content">
              <span class="novana_ulanekas__date"><%= new.created_at %></span>
              <div class="novana_ulanekas__title">
                <%= new.title_ru if params[:locale] != true and params[:locale] != 'tm' and params[:locale] != 'ru'%>
                <%= new.title_ru if params[:locale] == 'ru'%>
                <%= new.title_tm if params[:locale] == 'tm'%>
              </div>
              <p><%= simple_format new.text_ru.length <= 300 ? new.text_ru : new.text_ru[0..300] + '...' if params[:locale] != true and params[:locale] != 'tm' and params[:locale] != 'ru'%></p>
              <p><%= simple_format new.text_ru.length <= 300 ? new.text_ru : new.text_ru[0..300] + '...' if params[:locale] == 'ru' %></p>
              <p><%= simple_format new.text_tm.length <= 300 ? new.text_tm : new.text_tm[0..300] + '...' if params[:locale] == 'tm' %></p>
              <div class="novana_ulanekas__button-wrapper">
                <%= link_to news_path(new), class:'novana_ulanekas__button' do %>
                <%= t('more')%>
                <% end %>
              </div>
            </div>
        </div>
      <% end %>
